pipeline{
    agent any

    tools {
        nodejs 'nodejs 24.5.0'   
    }

    stages {
        stage(build){
            when {
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app..'
                dir('worker'){
                    sh 'npm install'
                }
            }
        }
        
        stage(test){
            when {
                changeset '**/result/**'
            }
            steps{
                echo 'Running Unit Tests on result app..'
                dir('result'){
                    sh '''npm install
                          npm test
                       '''
                }
            }
        }
    }
}
